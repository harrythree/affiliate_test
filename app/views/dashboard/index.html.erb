<h1>Dashboard</h1>
<div class="panel panel-primary">
  <div class="panel-heading">Email Address</div>
  <div class="panel-body"><%= current_user.email %></div>
</div>

<div class="panel panel-primary">
  <div class="panel-heading">Affiliate Link</div>
  <div class="panel-body">http://www.transformpoker.com/?ref=<%= current_user.affiliate_code %></div>
</div>

<div class="panel panel-primary">
  <div class="panel-heading">Referral Code</div>
  <div class="panel-body"><%= current_user.referrale_code %></div>
</div>

<div class="panel panel-primary">
  <div class="panel-heading">Currently Referred</div>
  <table class="table">
    <thead>
      <tr>
        <th>Email</th>
        <th>Referral Code</th>
      </tr>
    </thead>
    <tbody>
      <% @all_current_referrers.each do |referrer| %>
        <tr>
          <td><%= referrer.email %></td>
          <td><%= referrer.referrale_code %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
